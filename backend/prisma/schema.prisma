generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Planet {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // coords
  galaxy   Int
  system   Int
  position Int

  // planet details
  name     String  @db.VarChar(255)
  moon     Boolean @default(false)
  avatar   String
  
  // user
  user User @relation(fields: [userID], references: [id])
  userID   Int
  @@unique([galaxy, system, position], name: "planetPosition")
}

model User {
  id      Int      @id 
  name    String   
  planets Planet[]
}
