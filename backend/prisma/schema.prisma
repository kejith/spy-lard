// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Planet {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // coords
  galaxy    Int
  system    Int
  position  Int

  planetType String @default("planet")

  // planet details
  name   String  @db.VarChar(255)
  hasMoon   Boolean @default(false)
  avatar String

  moonID Int?

  moon Planet? @relation("AttachedMoon", fields: [moonID], references: [id])
  belongsTo Planet? @relation("AttachedMoon")

  // user
  user   User @relation(fields: [userID], references: [id])
  userID Int

  // ressources
  metal     Int?
  crystal   Int?
  deuterium Int? 

  // ships
  smallCargo     Int?
  largeCargo     Int?
  lightFighter   Int?
  heavyFighter   Int?
  cruiser        Int?
  battleship     Int?
  colonyShio     Int?
  recycler       Int?
  espionageProbe Int?
  bomber         Int?
  satellites     Int?
  destroyer      Int?
  deathstar      Int?
  battlecruiser  Int?

  // defensive
  rocketLauncher        Int?
  lightLaser            Int?
  heavyLaser            Int?
  gaussCanon            Int?
  ionCanon              Int?
  plasmaCanon           Int?
  smallShield           Int?
  largeShield           Int?
  antiBalisticMissile   Int?
  interplanetaryMissile Int?

  // structures
  metalMine            Int?
  crystalMine          Int?
  deuteriumSynthesizer Int?
  solarPlant           Int?
  fusionPlant          Int?
  roboticsFactory      Int?
  naniteFactory        Int?
  shipyard             Int?
  metalStorge          Int?
  crystalStorage       Int?
  deteriumTank         Int?
  researchLab          Int?
  terraformer          Int?
  allianceDepot        Int?
  sensorPhalanx        Int?
  jumpGate             Int?
  missileSilo          Int?

  espionages Espionage[] 

  @@unique([galaxy, system, position, planetType], name: "planetPosition")
}

model User {
  id         Int       @id
  name       String
  alliance   Alliance? @relation(fields: [allianceID], references: [id])
  allianceID Int?
  planets    Planet[]

  // research
  espionage              Int?
  computer               Int?
  weapons                Int?
  shield                 Int?
  armour                 Int?
  energy                 Int?
  hyperspace             Int?
  combustionDrive        Int?
  impulseDrive           Int?
  hyperspaceDrive        Int?
  laserTech              Int?
  ion                    Int?
  plasma                 Int?
  igfn                   Int?
  astropyhsics           Int?
  productionMaxMetall    Int?
  productionMaxCrystal   Int?
  productionMaxDeuterium Int?
  graviton               Int?  
}

model Alliance {
  id    Int    @id
  name  String
  users User[]
}

model Espionage {
  id  Int @id @default(autoincrement())
  pid Int @unique

  date        DateTime @default(now())
  detailLevel Int


  planetType String @default("planet")

  // coords
  galaxy   Int
  system   Int
  position Int

  // ressources
  metal     Int
  crystal   Int
  deuterium Int

  // ships
  smallCargo     Int?
  largeCargo     Int?
  lightFighter   Int?
  heavyFighter   Int?
  cruiser        Int?
  battleship     Int?
  colonyShio     Int?
  recycler       Int?
  espionageProbe Int?
  bomber         Int?
  satellites     Int?
  destroyer      Int?
  deathstar      Int?
  battlecruiser  Int?

  // defensive
  rocketLauncher        Int?
  lightLaser            Int?
  heavyLaser            Int?
  gaussCanon            Int?
  ionCanon              Int?
  plasmaCanon           Int?
  smallShield           Int?
  largeShield           Int?
  antiBalisticMissile   Int?
  interplanetaryMissile Int?

  // structures
  metalMine            Int?
  crystalMine          Int?
  deuteriumSynthesizer Int?
  solarPlant           Int?
  fusionPlant          Int?
  roboticsFactory      Int?
  naniteFactory        Int?
  shipyard             Int?
  metalStorge          Int?
  crystalStorage       Int?
  deteriumTank         Int?
  researchLab          Int?
  terraformer          Int?
  allianceDepot        Int?
  sensorPhalanx        Int?
  jumpGate             Int?
  missileSilo          Int?

  // research
  espionage              Int?
  computer               Int?
  weapons                Int?
  shield                 Int?
  armour                 Int?
  energy                 Int?
  hyperspace             Int?
  combustionDrive        Int?
  impulseDrive           Int?
  hyperspaceDrive        Int?
  laserTech              Int?
  ion                    Int?
  plasma                 Int?
  igfn                   Int?
  astropyhsics           Int?
  productionMaxMetall    Int?
  productionMaxCrystal   Int?
  productionMaxDeuterium Int?
  graviton               Int?

  planet Planet? @relation(fields: [galaxy, system, position, planetType], references: [galaxy, system, position, planetType])

}
